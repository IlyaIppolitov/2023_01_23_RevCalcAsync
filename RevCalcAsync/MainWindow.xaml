<Window x:Class="RevCalcAsync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RevCalcAsync"
        mc:Ignorable="d"
        Title="Revenue Calc" Height="322" Width="400">
    <Grid>
        <Button Content="Кнопка: параллельное считывание" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" Width="300" Height="38" Click="Button_Click"/>
        <TextBox x:Name="textBoxTotal"  HorizontalAlignment="Center" TextWrapping="Wrap" Text="Нажми на кнопку" VerticalAlignment="Top" Width="256" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="28" Margin="0,177,0,0"/>
        <Button x:Name="buttonReadAllLynesAsync" Content="Кнопка: последовательное асинхронное считывание" HorizontalAlignment="Center" Margin="0,112,0,0" VerticalAlignment="Top" Width="300" Height="34" Click="buttonReadAllLynesAsync_Click"/>
        <TextBox x:Name="textBoxTime" HorizontalAlignment="Center" Margin="0,225,0,0" TextWrapping="Wrap" Text="Здесь будет время работы" VerticalAlignment="Top" Width="256" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="24" FontSize="10"/>

    </Grid>
</Window>
